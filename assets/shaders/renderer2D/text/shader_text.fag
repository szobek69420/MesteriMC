#version 330 core
in vec2 TexCoords;
out vec4 color;

uniform sampler2D text;
uniform vec3 colour;

void main()
{
    float alpha = texture(text, TexCoords).r;
    if (alpha < 0.01)
        discard;
    color = vec4(colour, 1.0);
    
    //vec4 sampled = vec4(1.0, 1.0, 1.0, texture(text, TexCoords).r);
    //color = vec4(textColor, 1.0) * sampled;
}