#version 330 core
in vec2 uv;

out vec4 fragColour;

uniform sampler2D tex;//screen color buffer
uniform float radius;//blur radius

void main()
{            
    vec3 col = texture( tex, uv + vec2( radius, radius ) ).rgb;
    col += texture( tex, uv + vec2( radius, -radius ) ).rgb;
    col += texture( tex, uv + vec2( -radius, radius ) ).rgb;
    col += texture( tex, uv + vec2( -radius, -radius ) ).rgb;
    col /= 4.0;

    fragColour=vec4(col, 1);
}