#version 330 core
in vec2 uv;

out vec4 fragColour;

uniform sampler2D tex;//screen color buffer

void main()
{            
    fragColour=vec4(texture(tex, uv).rgb,1);

    float brightness = dot(fragColour.rgb, vec3(0.2126, 0.7152, 0.0722));
    if(brightness <= 1.0)
        fragColour=vec4(0,0,0,1);
}